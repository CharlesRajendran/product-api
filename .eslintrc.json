{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "comma-dangle": "off",
    "max-len": ["error", { "code": 160 }],
    "linebreak-style": 0
  }
}
